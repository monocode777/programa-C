#include <stdio.h>

int main()

{
    int longbasepeque,longbasegran,altura,area;
    printf("Bienvenido a tu calculador de areas.\nEl d√≠a de hoy calcularemos el area de un trapezoide. :D\n");
    printf("ingresa por favor los siquientes datos: \nAltura: \n ");
    scanf("%d",&altura);
    printf(" \nbase 1: \n ");
    scanf("%d",&longbasegran);
    printf(" \nbase 2: \n ");
    scanf("%d",&longbasepeque);

    area= ((altura*(longbasepeque+longbasegran)/2));
    printf("el area del trapezoide es =  %d",area);
    printf(" unidades");
    return 0;
}
